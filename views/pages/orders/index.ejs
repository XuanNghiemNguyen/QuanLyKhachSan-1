<div class="container-fluid">
  <!-- Page Heading -->
  <!-- <div class="card shadow mb-4"> -->
  <div
    class="card-header py-3"
    style="display: flex; justify-content: space-between;"
  >
    <!-- <h3 class="m-0 font-weight-bold text-primary">Hóa đơn thanh toán</h3> -->
    <a
      href="#"
      class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm"
      data-toggle="modal"
      data-target="#myModalAdd"
    >
      <i class="fas fa-plus-circle fa-sm"></i> Tạo hóa đơn</a
    >
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>STT</th>
            <th>Khách hàng</th>
            <th>Tổng giá</th>
            <th>Thời gian tạo</th>
            <th>Tình trạng</th>
            <th>Thao tác</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(function(item, idx) { %>
          <tr>
            <td><%= idx + 1 %></td>
            <td><%= item.customerName%></td>
            <td><%= item.totalPrice.toLocaleString()%> đ</td>
            <td><%= (new Date(item.createdAt)).toLocaleString()%></td>
            <td><%= item.hasPayed ? 'Đã thanh toán' : 'Chưa thanh toán'%></td>
            <td>
              <a
                style="display: <%= item.hasPayed && 'none'%>"
                href="javascript:void(0);"
                class="btn btn-sm btn-primary payment"
                data-id="<%= item._id %>"
                >Thanh toán</a
              >
              <a
                href="javascript:void(0);"
                class="btn btn-sm btn-info edit"
                data-id="<%= item._id %>"
                data-item="<%= JSON.stringify(item.roomLetters)%>"
                >Chi tiết</a
              >
              <a
                href="javascript:void(0);"
                class="btn btn-sm btn-danger delete"
                data-id="<%= item._id %>"
                >Xóa</a
              >
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
  <!-- Modal add-->
  <form action="/orders/add" method="post">
    <div
      class="modal fade"
      id="myModalAdd"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Tạo hóa đơn</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label for="customerId">Khách hàng:</label>
              <input
                list="customerId"
                class="form-control"
                id="myBrowser"
                placeholder="Chọn khách hàng đã lưu"
                name="customerId"
              />
              <datalist id="customerId">
                <% dataCustomer.forEach(function(item, idx) { %>
                <option value="<%= item._id %>"><%= item.name %></option>
                <% }); %>
              </datalist>
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Đóng
            </button>
            <button type="submit" class="btn btn-primary">Tạo</button>
          </div>
        </div>
      </div>
    </div>
  </form>

  <form action="/orders/payment" method="post">
    <div
      class="modal fade"
      id="paymentModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="myModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="myModalLabel">Thanh toán hóa đơn</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <strong>Bạn muốn thanh toán hóa đơn này?</strong>
          </div>
          <div class="modal-footer">
            <input type="hidden" name="id" class="form-control _id3" required />
            <button type="button" class="btn btn-default" data-dismiss="modal">
              Hủy
            </button>
            <button type="submit" class="btn btn-success">Xác nhận</button>
          </div>
        </div>
      </div>
    </div>
  </form>
  <!-- Modal Update -->
  <form action="/room-letters/update" method="post" id="updateForm">
    <div
      class="modal fade"
      id="EditModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div
        class="modal-dialog"
        style="min-width: 1000px; margin: auto;"
        role="document"
      >
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">
              Chi tiết hóa đơn
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <div class="modal-body"><div id="item-detail-order"></div></div>
        </div>
      </div>
    </div>
  </form>
  <!-- Modal Delete -->
  <form id="add-row-form" action="/orders/delete" method="post">
    <div
      class="modal fade"
      id="DeleteModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="myModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="myModalLabel">Xóa hóa đơn</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <strong>Bạn có chắc chắn muốn xóa?</strong>
          </div>
          <div class="modal-footer">
            <input type="hidden" name="id" class="form-control _id2" required />
            <button type="button" class="btn btn-default" data-dismiss="modal">
              Hủy
            </button>
            <button type="submit" class="btn btn-success">Xác nhận</button>
          </div>
        </div>
      </div>
    </div>
  </form>

  <script
    src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"
  ></script>

  <script>
    $(document).ready(function () {
      //showing data to edit modal
      $("#dataTable").on("click", ".edit", function () {
        const _id = $(this).data("id")
        const roomLetters = $(this).data("item")
        let stringTable = `
        <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>STT</th>
                    <th>Mã phiếu thuê</th>
                    <th>Số người</th>
                    <th>Giá</th>
                    <th>Ngày lập phiếu</th>
                  </tr>
                </thead>
                <tbody>`
        roomLetters.forEach(function (item, idx) {
          stringTable += `<tr>
                    <td>${idx + 1}</td>
                    <td>${item._id}</td>
                    <td>${item.numberOfPeople}</td>
                    <td>${item.price.toLocaleString()} đ</td>
                    <td>${(new Date(item.createdAt)).toLocaleString()}</td>
                  </tr>`
        })
        stringTable += `</tbody>
              </table>
            </div>
        `
        document.getElementById("item-detail-order").innerHTML = stringTable
        $("#EditModal").modal("show")
        $("._id").val(_id)
      })
      //showing delete record modal
      $("#dataTable").on("click", ".delete", function () {
        const _id = $(this).data("id")
        $("._id2").val(_id)
        $("#DeleteModal").modal("show")
      })
      //showing payment record modal
      $("#dataTable").on("click", ".payment", function () {
        const _id = $(this).data("id")
        $("#paymentModal").modal("show")
        $("._id3").val(_id)
      })
    })
  </script>
</div>
