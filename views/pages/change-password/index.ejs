<div class="container-fluid">
  <!-- Content Row -->
  <div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
      <!-- Nested Row within Card Body -->
      <div class="row" style="display: flex; justify-content: center;">
        <div
          class="col-lg-6"
          style="
            display: flex;
            justify-content: space-around;
            flex-direction: column;
          "
        >
          <div class="p-5">
            <div class="text-center">
              <h1 class="h4 text-gray-900 mb-4">Đổi mật khẩu</h1>
            </div>
            <div>
              <p class="text-danger" style="display: <%= error_old_password%>">
                Mật khẩu cũ không chính xác!
              </p>
            </div>
            <form
              action="/users/change-password?email=<%= curUser.email%>"
              method="post"
              oninput='re_new_password.setCustomValidity(re_new_password.value != new_password.value ? "Mật khẩu mới không khớp với nhau" : "")'
            >
              <div class="form-group">
                <input
                  type="password"
                  class="form-control form-control-user"
                  id="old_password"
                  name="old_password"
                  autocomplete="false"
                  aria-describedby="emailHelp"
                  placeholder="Nhập mật cũ"
                  required
                />
              </div>
              <div class="form-group">
                <input
                  type="password"
                  class="form-control form-control-user"
                  id="new_password"
                  name="new_password"
                  autocomplete="false"
                  aria-describedby="emailHelp"
                  placeholder="Nhập mật khẩu mới"
                  required
                />
              </div>
              <div class="form-group">
                <input
                  type="password"
                  class="form-control form-control-user"
                  id="re_new_password"
                  autocomplete="false"
                  name="re_new_password"
                  aria-describedby="emailHelp"
                  placeholder="Nhập lại mật khẩu mới"
                  required
                />
              </div>
              <input
                type="submit"
                class="btn btn-primary btn-user btn-block"
                value="Xác nhận"
              />
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
